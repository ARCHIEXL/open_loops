<table border="1" cellpadding="6" cellspacing="0" style="width: 100%; border-collapse: collapse;">
  <thead>
    <tr>
      <th>Task</th>
      <th>I</th>
      <th>U</th>
      <th>E</th>
      <th>Bucket</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% tasks.each do |t| %>
      <tr>
        <td><%= t.title %></td>
        <td><%= t.importance %></td>
        <td><%= t.urgency %></td>
        <td><%= t.effort %></td>
        <td><%= t.bucket %></td>
        <td>
          <%= link_to "Edit / Score", edit_task_path(t) %>
          <%= button_to (t.completed_at ? "Reopen" : "Complete"),
                        toggle_complete_task_path(t),
                        method: :patch,
                        form: { style: "display:inline;" } %>
          <%= button_to "Delete",
                        task_path(t),
                        method: :delete,
                        data: { turbo_confirm: "Delete?" },
                        form: { style: "display:inline;" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if tasks.empty? %>
  <p><em>None</em></p>
<% end %>
